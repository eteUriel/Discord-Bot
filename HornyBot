const Discord = require('discord.js');
const client = new Discord.Client();

client.on('ready', () => {
  console.log("mensaje que indica que tu bot esta prendido, es de tu eleccion");
});

client.on('message', msg => {
  if (msg.content === 'Introduce un texto de saludo, por ejemplo hola') {
    msg.reply('Saludos desde la Tierra de los Bots');
  }
});

client.login('Pega tu token del bot ac√°');
